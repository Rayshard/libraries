{
    "callbacks_class": "ParserCallbacks",
    "tokens": [
        "\\s+",
        {
            "id": "ID",
            "regex": "(_|[a-zA-z])(_|[a-zA-z]|[0-9])*"
        },
        {
            "id": "NUMBER",
            "regex": "-?(0|[1-9][0-9]*)",
            "parseFunc": {
                "type": "int",
                "func": "OnParseNumber"
            }
        },
        {
            "id": "STRING_LITERAL",
            "regex": "\"",
            "lexFunc": "OnLexStringLiteral",
            "parseFunc": {
                "type": "str",
                "func": "OnParseStringLiteral"
            }
        }
    ],
    "productions": {
        "DECL": {
            "rules": [
                {
                    "name": "full",
                    "rule": [
                        "let",
                        "ID",
                        "=",
                        "EXPR",
                        ";"
                    ],
                    "func": "OnParseFullDecl"
                },
                {
                    "name": "no_expr",
                    "rule": [
                        "let",
                        "ID",
                        ";"
                    ],
                    "func": "OnParseNoExprDecl"
                }
            ],
            "type": "str"
        }
    }
}